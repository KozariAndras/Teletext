@model IEnumerable<Teletext.Models.TVChannel>

@{
    ViewData["Title"] = "ChannelMenu";
}

<h1>ChannelMenu</h1>

<p>
    <a asp-action="OpenAddChannel">Add New</a>
    <br />
    <a asp-action="Index">Back to Admin Menu</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Number)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Programs.Count)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Number)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Programs.Count)
            </td>
            <td>
                <a asp-action="OpenEditChannel" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="DetailsChannel" asp-route-id="@item.Id">Details</a> |
                <a asp-action="DeleteChannel" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
