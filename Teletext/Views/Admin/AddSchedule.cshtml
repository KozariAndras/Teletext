@model AiringSchedule

@{
    ViewData["Title"] = "AddSchedule";
}

<h1>AddSchedule</h1>

<h4>AiringSchedule</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddSchedule">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TVProgramId" class="control-label"></label>
                <select asp-for="TVProgramId" class ="form-control" asp-items="ViewBag.TVProgramId"></select>
            </div>
            <div class="form-group">
                <label asp-for="StartDate" class="control-label"></label>
                <input asp-for="StartDate" class="form-control" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Day" class="control-label"></label>
                <select asp-for="Day" class="form-control"></select>
                <span asp-validation-for="Day" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Time" class="control-label"></label>
                <input asp-for="Time" class="form-control" />
                <span asp-validation-for="Time" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

