@model IEnumerable<AiringSchedule>

@{
    ViewData["Title"] = "SchedulesMenu";
}

<h1>SchedulesMenu</h1>

<p>
    <a asp-action="OpenAddSchedule">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TVProgram)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Day)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Time)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TVProgram.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Day)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Time)
            </td>
            <td>
                <a asp-action="OpenEditSchedule" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="DetailsSchedule" asp-route-id="@item.Id">Details</a> |
                <a asp-action="DeleteSchedule" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
